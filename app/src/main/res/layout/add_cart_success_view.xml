<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addcart_success_view"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_gravity="bottom"
    android:background="#000"
    android:alpha="0.8"
    android:gravity="center_vertical"
    android:padding="10dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/addcart_success_item_img"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginRight="14dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/text.item.cart.add"
        android:textSize="14sp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/addcart_success_check_button"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="@string/button.cart.check"
        android:textSize="10sp"
        android:textColor="@color/white"
        style="@style/TransparentWhiteButtonStyle"
        />

</LinearLayout>