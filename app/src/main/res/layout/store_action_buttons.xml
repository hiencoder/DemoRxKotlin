<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="24dp"
    android:paddingBottom="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:background="@color/grayLight400"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/map_button"
            style="@style/WhiteButtonStyle"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_btn_map"
            android:singleLine="true"
            android:stateListAnimator="@null"
            android:text="@string/button.map"
            android:textColor="@color/grayLight200"
            android:textSize="11sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/call_button"
            style="@style/WhiteButtonStyle"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_btn_call"
            android:singleLine="true"
            android:stateListAnimator="@null"
            android:text="@string/button.phone"
            android:textColor="@color/grayLight200"
            android:textSize="11sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/favorite_button"
            style="@style/WhiteButtonStyle"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_btn_fav"
            android:singleLine="true"
            android:stateListAnimator="@null"
            android:text="@string/button.favorite"
            android:textColor="@color/grayLight200"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:background="@color/grayLight400"/>
</LinearLayout>