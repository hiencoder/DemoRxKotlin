<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSmoke"
    tools:context=".preference.EmailPasswordRegisterActivity">

    <android.support.v4.widget.NestedScrollView
        style="@style/ScrollBarTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="30dp"
                android:text="@string/text.account.email.register.description.1"
                android:textColor="@color/greenDark100"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:text="@string/text.account.email.register.description.2"
                android:textColor="@color/grayLight200"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:orientation="horizontal"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/id_title"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text.account.email"
                    android:textColor="@color/greenDark100"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/id_input"
                    style="@style/LoginFormTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:hint="@string/text.account.email.input"
                    android:textColorHint="@color/grayLight200"
                    android:textColor="@color/greenDark100"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:orientation="horizontal"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/password_title"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text.account.password"
                    android:textColor="@color/greenDark100"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/password_input"
                    style="@style/LoginFormTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:hint="@string/text.account.password.input"
                    android:textColorHint="@color/grayLight200"
                    android:textColor="@color/greenDark100"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/register_button"
                style="@style/ActionButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:text="@string/button.register"
                />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_actionbar" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/network_progress_view" />

</android.support.design.widget.CoordinatorLayout>
