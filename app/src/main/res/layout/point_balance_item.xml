<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingRight="14dp"
        android:gravity="right"
        android:background="@color/white"
        >

        <com.tabio.tabioapp.ui.widget.LearningCurveTextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-20dp"
            android:textColor="@color/greenDark100"
            android:textStyle="bold"
            android:textSize="80sp"
            android:text="300 " />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greenDark100"
            android:textSize="18sp"
            android:text="@string/text.histories.unit.piece"
            />

    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:background="@color/grayLight400"/>

    <TextView
        android:id="@+id/expires_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="13sp"
        android:gravity="right"
        android:background="@color/white"
        android:textSize="14sp"
        android:textColor="@color/greenDark100"
        android:text="15/03/10で失効します。"
        />


</LinearLayout>