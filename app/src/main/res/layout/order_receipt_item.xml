<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:gravity="right"
            android:textColor="@color/greenDark100"
            android:textSize="14sp"
            android:text="@string/text.order.item.price.netoftax"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greenDark100"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text=""
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:textSize="14sp"
            android:textColor="@color/greenDark100"
            android:gravity="right"
            android:text="@string/text.order.item.price.discount.netoftax"
            />

        <TextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greenDark100"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text=""
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:gravity="right"
            android:textColor="@color/greenDark100"
            android:textSize="14sp"
            android:text="@string/text.order.item.usepoint.netoftax"
            />

        <TextView
            android:id="@+id/usepoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greenDark100"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text=""
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:gravity="right"
            android:textColor="@color/greenDark100"
            android:textSize="14sp"
            android:text="@string/text.tax"
            />

        <TextView
            android:id="@+id/tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greenDark100"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text=""
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:textColor="@color/greenDark100"
            android:gravity="right"
            android:textSize="14sp"
            android:text="@string/text.order.item.shippingFees.taxIncluded"
            />

        <TextView
            android:id="@+id/shipping_fees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greenDark100"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text=""
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:textColor="@color/greenDark100"
            android:gravity="right"
            android:textSize="14sp"
            android:text="@string/text.order.item.total.taxIncluded"
            />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/redDark600"
            android:textStyle="bold"
            android:text=""
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_weight="1"
        android:background="@color/grayLight400"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:paddingTop="6dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:gravity="right"
            android:textColor="@color/greenDark100"
            android:textSize="14sp"
            android:text="@string/text.order.item.getPiece"
            />

        <TextView
            android:id="@+id/get_piece"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greenDark100"
            android:textSize="14sp"
            android:text=""
            />

    </LinearLayout>


</LinearLayout>