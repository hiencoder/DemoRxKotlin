<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/store_type_icon_1"
                android:layout_width="@dimen/store.services.icon.size"
                android:layout_height="@dimen/store.services.icon.size"
                android:src="@drawable/ic_type_off_ladies" />

            <TextView
                android:id="@+id/store_type_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/text.store.services.title.ladies"
                android:textColor="@color/grayLight200"
                android:textSize="@dimen/store.services.text.size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/store_type_icon_2"
                android:layout_width="@dimen/store.services.icon.size"
                android:layout_height="@dimen/store.services.icon.size"
                android:src="@drawable/ic_type_off_mens" />

            <TextView
                android:id="@+id/store_type_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/text.store.services.title.men"
                android:textColor="@color/grayLight200"
                android:textSize="@dimen/store.services.text.size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/store_type_icon_3"
                android:layout_width="@dimen/store.services.icon.size"
                android:layout_height="@dimen/store.services.icon.size"
                android:src="@drawable/ic_type_off_kids" />

            <TextView
                android:id="@+id/store_type_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/text.store.services.title.kids"
                android:textColor="@color/grayLight200"
                android:textSize="@dimen/store.services.text.size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/store_type_icon_4"
                android:layout_width="@dimen/store.services.icon.size"
                android:layout_height="@dimen/store.services.icon.size"
                android:src="@drawable/ic_type_off_embroidery" />

            <TextView
                android:id="@+id/store_type_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/text.store.services.title.embroidery"
                android:textColor="@color/grayLight200"
                android:textSize="@dimen/store.services.text.size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/store_type_icon_5"
                android:layout_width="@dimen/store.services.icon.size"
                android:layout_height="@dimen/store.services.icon.size"
                android:src="@drawable/ic_type_off_print" />

            <TextView
                android:id="@+id/store_type_text_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/text.store.services.title.printing"
                android:textColor="@color/grayLight200"
                android:textSize="@dimen/store.services.text.size" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/store_type_icon_6"
                android:layout_width="@dimen/store.services.icon.size"
                android:layout_height="@dimen/store.services.icon.size"
                android:src="@drawable/ic_type_off_pot" />

            <TextView
                android:id="@+id/store_type_text_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/text.store.services.title.nonskid"
                android:textColor="@color/grayLight200"
                android:textSize="@dimen/store.services.text.size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/store_type_icon_7"
                android:layout_width="@dimen/store.services.icon.size"
                android:layout_height="@dimen/store.services.icon.size"
                android:src="@drawable/ic_type_off_taxfree" />

            <TextView
                android:id="@+id/store_type_text_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/text.store.services.title.dutyFree"
                android:textColor="@color/grayLight200"
                android:textSize="@dimen/store.services.text.size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/store_type_icon_8"
                android:layout_width="@dimen/store.services.icon.size"
                android:layout_height="@dimen/store.services.icon.size"
                android:src="@drawable/ic_type_off_card" />

            <TextView
                android:id="@+id/store_type_text_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/text.store.services.title.chinaUnionpay"
                android:textColor="@color/grayLight200"
                android:textSize="@dimen/store.services.text.size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/store_type_icon_9"
                android:layout_width="@dimen/store.services.icon.size"
                android:layout_height="@dimen/store.services.icon.size"
                android:src="@drawable/ic_type_off_piece" />

            <TextView
                android:id="@+id/store_type_text_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/text.store.services.title.membershipPiece"
                android:textColor="@color/grayLight200"
                android:textSize="@dimen/store.services.text.size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/store_type_icon_10"
                android:layout_width="@dimen/store.services.icon.size"
                android:layout_height="@dimen/store.services.icon.size"
                android:src="@drawable/ic_type_off_point" />

            <TextView
                android:id="@+id/store_type_text_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/text.store.services.title.membershipCert"
                android:textColor="@color/grayLight200"
                android:textSize="@dimen/store.services.text.size" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>